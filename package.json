{
  "name": "if-juku-instagram-automation",
  "version": "1.0.0",
  "description": "if-juku Instagram自動投稿システム - カルーセル画像＆ショート動画生成",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "generate:carousel": "tsx src/generateCarousel.ts",
    "generate:reel": "tsx src/generateReel.ts",
    "generate:all": "tsx src/generateAllCategories.ts",
    "post:instagram": "tsx src/postToInstagram.ts",
    "daily:morning": "tsx src/workflows/dailyMorning.ts",
    "daily:evening": "tsx src/workflows/dailyEvening.ts",
    "daily:activity": "tsx src/workflows/dailyActivityPost.ts",
    "daily:dev": "tsx src/workflows/dailyDevPost.ts",
    "remotion:preview": "remotion preview src/remotion/index.ts",
    "remotion:render": "remotion render src/remotion/index.ts ReelVideo out/reel.mp4",
    "fetch:facebook": "tsx src/fetchFacebookPosts.ts",
    "fetch:facebook:auth": "source .venv/bin/activate && python scripts/fetchFacebookBrowser.py auth",
    "fetch:facebook:browser": "source .venv/bin/activate && python scripts/fetchFacebookBrowser.py fetch --url https://www.facebook.com/shota.takasaki.37 --scrolls 20 --show",
    "fetch:x": "tsx src/fetchXPosts.ts",
    "content:auth": "tsx src/generatePersonalizedContent.ts auth",
    "content:status": "tsx src/generatePersonalizedContent.ts status",
    "content:generate": "tsx src/generatePersonalizedContent.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@remotion/bundler": "^4.0.0",
    "@remotion/cli": "^4.0.0",
    "@remotion/renderer": "^4.0.0",
    "axios": "^1.7.0",
    "dotenv": "^16.4.0",
    "form-data": "^4.0.0",
    "node-cron": "^3.0.3",
    "puppeteer": "^23.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "remotion": "^4.0.0",
    "sharp": "^0.33.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
